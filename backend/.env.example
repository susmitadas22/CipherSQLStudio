# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration (Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ciphersqlstudio?retryWrites=true&w=majority

# PostgreSQL Configuration (Sandbox Database)
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=your_password
PG_DATABASE=sql_sandbox

# JWT Secret for Authentication (Optional Feature)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# LLM API Configuration (Choose one)
# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# OR Gemini
GEMINI_API_KEY=your-gemini-api-key

# LLM Provider (openai or gemini)
LLM_PROVIDER=openai

# CORS Origin
CORS_ORIGIN=http://localhost:3000
